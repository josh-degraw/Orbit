<Window x:Class="Orbit.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orbit.Desktop"
        xmlns:components="clr-namespace:Orbit.Desktop.Components"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="black">
        <components:WasteWaterStorageTankDataComponentControl DataContext="{Binding WasteWater}" Margin="249,138,248,173" />
        <components:UrineTankDataComponentControl DataContext="{Binding UrineTank}" Margin="0,287,497,24" />
        <components:PotableWaterTankDataComponentControl DataContext="{Binding PotableWaterTank}" Margin="487,261,10,50" />
        <components:UrineSystemStatusComponentControl DataContext="{Binding UrineSystemStatus}" Margin="0,29,497,281" />
        <components:WaterProcessorStatusComponentControl DataContext="{Binding WaterProcessorStatus}" Margin="487,18,10,292" />
    </Grid>
    
</Window>
